<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress checkstyle warnings for test files -->
    <suppress files="test[/\\].*\.java" checks="FinalLocalVariable"/>
    <suppress files="test[/\\].*\.java" checks="MagicNumber"/>
    <suppress files="test[/\\].*\.java" checks="AvoidInlineConditionals"/>
    <suppress files="test[/\\].*\.java" checks="ExplicitInitialization"/>
</suppressions>